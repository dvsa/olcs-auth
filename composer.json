{
    "name": "olcs/olcs-auth",
    "description": "OLCS Authentication",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^7.4",
        "container-interop/container-interop": "^1.2",
        "laminas/laminas-authentication": "^2.5",
        "laminas/laminas-form": "^3.0.0",
        "laminas/laminas-http": "^2.5",
        "laminas/laminas-mvc": "^3.3.0",
        "laminas/laminas-mvc-plugin-flashmessenger": "^1.8",
        "laminas/laminas-servicemanager": "^3.0.0",
        "laminas/laminas-session": "^2.8.1",
        "laminas/laminas-stdlib": "^3.0.0",
        "laminas/laminas-view": "^2.11",
        "lm-commons/lmc-rbac-mvc": "^3.3",
        "psr/container": "^1.1.2"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "johnkary/phpunit-speedtrap": "^4.0",
        "mockery/mockery": "^1.6",
        "olcs/olcs-common": "^5.0.0",
        "olcs/olcs-transfer": "^5.0.0",
        "phpunit/phpunit": "^9.6"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Dvsa\\Olcs\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dvsa\\OlcsTest\\Auth\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "laminas/laminas-dependency-plugin": true
        },
        "platform": {
            "ext-redis": "4.3"
        },
        "sort-packages": true
    },
    "scripts": {
        "bin": "echo 'bin not installed'",
        "post-install-cmd": [
            "@composer bin all install"
        ],
        "test": "phpunit",
        "phpcs": "phpcs",
        "psalm": "psalm",
        "phpstan": "phpstan",
        "all": [
            "@test",
            "@phpcs",
            "@psalm",
            "@phpstan"
        ]
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": true
        }
    }
}
