{
    "name": "olcs/olcs-auth",
    "description": "OLCS Authentication",
    "license": "MIT",
    "type": "library",
    "require": {
      "php": "^7.4",
      "psr/log": "^1.0",
      "laminas/laminas-log": "^2.12",
      "laminas/laminas-eventmanager": "^2.6.4|^3.0",
      "laminas/laminas-mvc": "^2.7.15|^3.3",
      "laminas/laminas-session": "^2.8.7",
      "laminas/laminas-console": "^2.7",
      "laminas/laminas-stdlib": "^2.7.9|^3.0"
    },
    "require-dev": {
        "olcs/olcs-common": "~4.206.0",
        "olcs/olcs-transfer": "~4.206.0",
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.6",
        "johnkary/phpunit-speedtrap": "^4.0",
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Dvsa\\Olcs\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "Dvsa\\OlcsTest\\Auth\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "laminas/laminas-dependency-plugin": true
        }
    },
    "scripts": {
      "bin": "echo 'bin not installed'",
      "post-install-cmd": [
        "@composer bin all install"
      ],
      "test": "phpunit",
      "phpcs": "phpcs",
      "psalm": "psalm",
      "phpstan": "phpstan",
      "all": [
        "@test",
        "@phpcs",
        "@psalm",
        "@phpstan"
      ]
    },
    "extra": {
      "bamarni-bin": {
        "bin-links": true,
        "forward-command": true
      }
    }
}
